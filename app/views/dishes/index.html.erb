<h1>Dishes</h1>

<table>
  
  <% @dishes.each do |dish| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td class="list_description">
      <dl>
	<dt><%= dish.item%></dt>
	<dd><%= dish.spicy%></dd>
	<dd><%= dish.gf%></dd>
      </dl>
      
      </td>
    <td class="list_actions">
      <%= link_to 'Show', dish %></br>
      <%= link_to 'Edit', edit_dish_path(dish) %></br>
       <%= link_to 'Destroy', dish, method: :delete, data: { confirm:
	   'Are you sure?' } %></br>
       
    </td>
  </tr>
  
    <% end %>
  </table>
</br>

<%= link_to 'New Dish', new_dish_path %>
